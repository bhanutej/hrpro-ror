.content
  .container-fluid
    .row
      .col-md-8
        .card
          .card-content
            - user_payslip_years.keys.each do |year|
              .col-md-4
                %button.btn.btn-primary.btn-year{ value: year.first, 'data-user': @user_id }
                  = year.first

:javascript
  $(function () {
    $('.btn-year').on('click', function(){
      var year = $(this).val();
      var userId = $(this).data("user");
      $("#myModal .modal-body").html("#{ j render 'user_pay_slips/months_list', year: year, user_id: userId }");
      showModel("PaySlip Generation");
    });
  });
