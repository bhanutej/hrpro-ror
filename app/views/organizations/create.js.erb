$('.new_organization .row').each(function(){
  $(this).find('.form-group').each(function(){
    $(this).find('.text-danger').html('');
  });
});
<% if @organization.errors.present? %>
  <% @organization.errors.messages.each do |key, value| %>
    $('.<%= key.to_s %>').addClass('has-error');
    $('.<%= key.to_s %>').append("<div class='text-danger'><%= key %> <%= value[0] %></div>");
  <% end %>
  <% if @organization.addresses.present? && @organization.addresses.first.errors.present? %>
    <% @organization.addresses.first.errors.messages.each do |key, value| %>
      $('.<%= key.to_s %>').addClass('has-error');
      $('.<%= key.to_s %>').append("<div class='text-danger'><%= key %> <%= value[0] %></div>");
    <% end %>
  <% end %>
<% else %>
    showNotification("success", "Successfully created");
<% end %>
